<h1>Listing artists</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th></th>
  </tr>
 
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.bio %></td>
      <td><%= link_to 'Show', artists_path(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist_path(artist),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>